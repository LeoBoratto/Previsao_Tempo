<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- Cor do fundo do círculo -->
    <solid android:color="#E3F2FD" />

    <!-- Cor e espessura da borda do círculo -->
    <stroke
        android:width="4dp"
        android:color="#1E88E5" />

    <!-- Tamanho interno do círculo (opcional) -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />
</shape>
